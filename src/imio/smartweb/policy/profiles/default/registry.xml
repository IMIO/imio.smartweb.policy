<?xml version="1.0"?>
<registry
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="imio.smartweb">

  <record name="plone.default_page_types">
    <value purge="true">
      <element>Collection</element>
      <element>imio.smartweb.Page</element>
    </value>
  </record>


  <!-- TinyMCE custom configuration -->

  <record name="plone.alignment_styles" interface="Products.CMFPlone.interfaces.controlpanel.ITinyMCESchema" field="alignment_styles">
    <value purge="true">
      <element>Left|alignleft|alignleft</element>
      <element>Center|aligncenter|aligncenter</element>
      <element>Right|alignright|alignright</element>
    </value>
  </record>

  <record name="plone.block_styles" interface="Products.CMFPlone.interfaces.controlpanel.ITinyMCESchema" field="block_styles">
    <value purge="true">
      <element>Paragraph|p</element>
    </value>
  </record>

  <record name="plone.header_styles" interface="Products.CMFPlone.interfaces.controlpanel.ITinyMCESchema" field="header_styles">
    <value purge="true">
      <element>Header 2|h2</element>
      <element>Header 3|h3</element>
      <element>Header 4|h4</element>
      <element>Header 5|h5</element>
    </value>
  </record>

  <record name="plone.inline_styles" interface="Products.CMFPlone.interfaces.controlpanel.ITinyMCESchema" field="inline_styles">
    <value purge="true">
      <element>Bold|bold|bold</element>
      <element>Italic|italic|italic</element>
      <element>Strikethrough|strikethrough|strikethrough</element>
      <element>Superscript|superscript|superscript</element>
      <element>Subscript|subscript|subscript</element>
    </value>
  </record>

  <record name="plone.menu" interface="Products.CMFPlone.interfaces.controlpanel.ITinyMCESchema" field="menu">
    <value>{
      "edit": {
          "title": "Edit",
          "items": "undo redo | cut copy paste pastetext | searchreplace textpattern selectall | textcolor"
      },
      "view": {
          "title": "View",
          "items": "visualaid visualchars visualblocks preview fullpage fullscreen"
      },
      "table": {
          "title": "Table",
          "items": "inserttable tableprops deletetable | cell row column"
      }
    }
    </value>
  </record>

  <record name="plone.menubar" interface="Products.CMFPlone.interfaces.controlpanel.ITinyMCESchema" field="menubar">
    <value purge="true">
      <element>edit</element>
      <element>table</element>
      <element>format</element>
    </value>
  </record>

