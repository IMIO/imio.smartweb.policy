    <value>
    {
      "style_formats": [{
              "items": [
                  {
                      "format": "h2",
                      "title": "Header 2"
                  },
                  {
                      "format": "h3",
                      "title": "Header 3"
                  },
                  {
                      "format": "h4",
                      "title": "Header 4"
                  },
                  {
                      "format": "h5",
                      "title": "Header 5"
                  }
              ],
              "title": "Headers"
          },
          {
              "items": [{
                      "format": "p",
                      "title": "Paragraph"
                  },
                  {
                      "format": "blockquote",
                      "title": "Blockquote"
                  }
              ],
              "title": "Bloc"
          },
          {
              "items": [{
                      "format": "bold",
                      "icon": "bold",
                      "title": "Bold"
                  },
                  {
                      "format": "italic",
